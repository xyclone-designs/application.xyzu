<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatCheckBox
        style="@style/Xyzu.View.Option.Menu.CheckBox"
        android:id="@+id/xyzu_view_option_menu_all_appcompatcheckbox"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
        android:layout_marginStart="@dimen/dp16"
        android:minWidth="@dimen/dp0"
        android:minHeight="@dimen/dp0"
        android:translationY="@dimen/dp-2"
        
        app:layout_constraintWidth="wrap_content"
        app:layout_constraintHeight="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/xyzu_view_option_menu_text_appcompattextview"
        app:layout_constraintBottom_toBottomOf="@id/xyzu_view_option_menu_text_appcompattextview"/>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/Xyzu.View.Option.Menu.Text"
        android:id="@+id/xyzu_view_option_menu_text_appcompattextview"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0" 
        android:layout_margin="@dimen/dp16"
        
        app:layout_constraintWidth="match_constraint"
        app:layout_constraintHeight="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/xyzu_view_option_menu_all_appcompatcheckbox"
        app:layout_constraintEnd_toStartOf="@id/xyzu_view_option_menu_cancel_appcompatimagebutton"/>

    <androidx.appcompat.widget.AppCompatImageButton
        style="@style/Xyzu.View.Option.Menu.ImageButton"
        android:id="@+id/xyzu_view_option_menu_cancel_appcompatimagebutton"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
        android:layout_marginEnd="@dimen/dp16"
        android:src="@drawable/icon_menuoptions_cancel"
        
        app:layout_constraintWidth="wrap_content"
        app:layout_constraintHeight="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/xyzu_view_option_menu_text_appcompattextview"
        app:layout_constraintBottom_toBottomOf="@id/xyzu_view_option_menu_text_appcompattextview"/>

    <xyzu.widgets.recyclerviews.simple.SimpleHorizontalRecyclerView
        style="@style/Xyzu.View.Option.Menu.RecyclerView"
        android:id="@+id/xyzu_view_option_menu_menu_simplehorizontalrecyclerview"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
        android:layout_marginVertical="@dimen/dp16"

        app:layout_constraintWidth="wrap_content_constrained"
        app:layout_constraintHeight="wrap_content_constrained"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xyzu_view_option_menu_text_appcompattextview"/>

    <xyzu.views.insets.NavigationBarInsetView
        android:id="@+id/xyzu_view_option_menu_navigationbarinsetview"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
        android:layout_marginTop="@dimen/dp16"

        app:layout_constraintWidth="wrap_content_constrained"
        app:layout_constraintHeight="wrap_content_constrained"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xyzu_view_option_menu_menu_simplehorizontalrecyclerview"/>

</merge>
