<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    style="@style/Xyzu.View.Misc.NavigationView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <xyzu.views.insets.StatusBarInsetView
        android:id="@+id/xyzu_view_misc_navigationheader_statusbarinsetview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/xyzu_view_misc_navigationheader_icon_appcompatimageview"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/xyzu_view_misc_navigationheader_icon_appcompatimageview"
        style="@style/Xyzu.View.Misc.NavigationView.Icon"
        android:layout_width="@dimen/dp64"
        android:layout_height="@dimen/dp64"

        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xyzu_view_misc_navigationheader_statusbarinsetview"/>

</androidx.constraintlayout.widget.ConstraintLayout>