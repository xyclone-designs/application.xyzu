<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <xyzu.views.insets.StatusBarInsetView
        style="@style/Xyzu.View.Toolbar.StatusBarInset"
        android:id="@+id/xyzu_view_toolbar_search_statusbarinsetview"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
        
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_weight="0"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth="match_constraint"
        app:layout_constraintHeight="wrap_content_constrained"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/xyzu_view_toolbar_search_searchview"/>

   <androidx.appcompat.widget.SearchView
        style="@style/Xyzu.View.Toolbar.Search"
        android:id="@+id/xyzu_view_toolbar_search_searchview"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
        android:layout_margin="@dimen/dp16"
        
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_weight="0"
        app:layout_constraintWidth="match_constraint"
        app:layout_constraintHeight="wrap_content_constrained"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xyzu_view_toolbar_search_statusbarinsetview"
        app:layout_constraintBottom_toTopOf="@id/xyzu_view_toolbar_search_searcher_horizontalscrollview"/>

    <HorizontalScrollView
        android:id="@+id/xyzu_view_toolbar_search_searcher_horizontalscrollview"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
        android:scrollbars="none"
        
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_weight="0"
        app:layout_constraintWidth="match_constraint"
        app:layout_constraintHeight="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xyzu_view_toolbar_search_searchview"
        app:layout_constraintEnd_toStartOf="@id/xyzu_view_toolbar_search_searchresults_optionstoggle_appcompatimagebutton">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageButton
                style="@style/Xyzu.View.Toolbar.Button"
                android:id="@+id/xyzu_view_toolbar_search_searcher_albumstoggle_appcompatimagebutton"
                android:src="@drawable/icon_library_albums"
                android:layout_height="@dimen/dp32"
                android:layout_width="@dimen/dp32"
                android:layout_marginEnd="@dimen/dp8" 
                android:layout_marginStart="@dimen/dp16" />

            <androidx.appcompat.widget.AppCompatImageButton
                style="@style/Xyzu.View.Toolbar.Button"
                android:id="@+id/xyzu_view_toolbar_search_searcher_artiststoggle_appcompatimagebutton"
                android:src="@drawable/icon_library_artists"
                android:layout_height="@dimen/dp32"
                android:layout_width="@dimen/dp32"
                android:layout_marginHorizontal="@dimen/dp8"  />

            <androidx.appcompat.widget.AppCompatImageButton
                style="@style/Xyzu.View.Toolbar.Button"
                android:id="@+id/xyzu_view_toolbar_search_searcher_genrestoggle_appcompatimagebutton"
                android:src="@drawable/icon_library_genres"
                android:layout_height="@dimen/dp32"
                android:layout_width="@dimen/dp32"
                android:layout_marginHorizontal="@dimen/dp8"  />

            <androidx.appcompat.widget.AppCompatImageButton
                style="@style/Xyzu.View.Toolbar.Button"
                android:id="@+id/xyzu_view_toolbar_search_searcher_playliststoggle_appcompatimagebutton"
                android:src="@drawable/icon_library_playlists"
                android:layout_height="@dimen/dp32"
                android:layout_width="@dimen/dp32"
                android:layout_marginHorizontal="@dimen/dp8"  />

            <androidx.appcompat.widget.AppCompatImageButton
                style="@style/Xyzu.View.Toolbar.Button"
                android:id="@+id/xyzu_view_toolbar_search_searcher_songstoggle_appcompatimagebutton"
                android:src="@drawable/icon_library_songs"
                android:layout_height="@dimen/dp32"
                android:layout_width="@dimen/dp32"
                android:layout_marginEnd="@dimen/dp16"
                android:layout_marginStart="@dimen/dp8"  />
        
        </androidx.appcompat.widget.LinearLayoutCompat>
            
    </HorizontalScrollView>

    <androidx.appcompat.widget.AppCompatImageButton
        style="@style/Xyzu.View.Toolbar.Button"
        android:id="@+id/xyzu_view_toolbar_search_searchresults_optionstoggle_appcompatimagebutton"
        android:src="@drawable/icon_menuoptions_listoptions"
        android:layout_height="@dimen/dp48"
        android:layout_width="@dimen/dp48"
        android:layout_margin="@dimen/dp16" 
        android:backgroundTint="@color/ColorBackground"
        
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/xyzu_view_toolbar_search_searcher_horizontalscrollview"
        app:layout_constraintStart_toEndOf="@id/xyzu_view_toolbar_search_searcher_horizontalscrollview"
        app:layout_constraintBottom_toBottomOf="@id/xyzu_view_toolbar_search_searcher_horizontalscrollview"/>

</merge>