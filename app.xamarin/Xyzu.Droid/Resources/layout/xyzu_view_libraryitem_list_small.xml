<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        style="@style/Xyzu.View.LibraryItem.List.Image"
        android:id="@+id/xyzu_view_libraryitem_list_small_artwork_appcompatimageview"
        
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
        android:layout_marginStart="@dimen/dp4"
        
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth="match_constraint"
        app:layout_constraintHeight="match_constraint"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/xyzu_view_libraryitem_list_small_lineone_appcompattextview"
        app:layout_constraintBottom_toBottomOf="@id/xyzu_view_libraryitem_list_small_linetwo_appcompattextview"/>

    <androidx.appcompat.widget.AppCompatImageView
        style="@style/Xyzu.View.LibraryItem.Grid.Image"
        android:id="@+id/xyzu_view_libraryitem_list_small_equaliser_appcompatimageview"
        android:background="@null"
        android:src="@drawable/icon_general_nowplaying"
        android:visibility="gone"
        
        android:layout_width="@dimen/dp32"
        android:layout_height="@dimen/dp32"
        android:layout_marginTop="@dimen/dp4"
        android:layout_marginEnd="@dimen/dp4"
        android:layout_marginStart="@dimen/dp4"
        android:layout_marginBottom="@dimen/dp4"
        
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintStart_toEndOf="@id/xyzu_view_libraryitem_list_small_artwork_appcompatimageview"
        app:layout_constraintTop_toTopOf="@id/xyzu_view_libraryitem_list_small_lineone_appcompattextview"
        app:layout_constraintBottom_toBottomOf="@id/xyzu_view_libraryitem_list_small_linetwo_appcompattextview"/>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/Xyzu.View.LibraryItem.List.Text"
        android:id="@+id/xyzu_view_libraryitem_list_small_lineone_appcompattextview"
        
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
        android:layout_marginEnd="@dimen/dp4"
        android:layout_marginTop="@dimen/dp4"
        android:layout_marginStart="@dimen/dp4"
        
        app:layout_constraintWidth="match_constraint"
        app:layout_constraintHeight="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/xyzu_view_libraryitem_list_small_equaliser_appcompatimageview"
        app:layout_constraintBottom_toTopOf="@id/xyzu_view_libraryitem_list_small_linetwo_appcompattextview"/>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/Xyzu.View.LibraryItem.List.Text"
        android:id="@+id/xyzu_view_libraryitem_list_small_linetwo_appcompattextview"
        
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
        android:layout_marginEnd="@dimen/dp4"
        android:layout_marginStart="@dimen/dp4"
        android:layout_marginBottom="@dimen/dp4"
        
        app:layout_constraintWidth="match_constraint"
        app:layout_constraintHeight="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/xyzu_view_libraryitem_list_small_equaliser_appcompatimageview"
        app:layout_constraintTop_toBottomOf="@id/xyzu_view_libraryitem_list_small_lineone_appcompattextview"/>

</merge>
