<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

  <xyzu.preference.SwitchPreference
      app:iconSpaceReserved="false"
      app:key="settings_notification_iscolourised_switchpreference_key"
      app:title="@string/settings_notification_iscolourised_title"
      app:summary="@string/settings_notification_iscolourised_description"
      app:summaryOn="@string/settings_notification_iscolourised_description_on"
      app:summaryOff="@string/settings_notification_iscolourised_description_off"/>

  <xyzu.preference.SwitchPreference
      app:iconSpaceReserved="false"
      app:key="settings_notification_usecustomcolour_switchpreference_key"
      app:title="@string/settings_notification_usecustomcolour_title"
      app:summary="@string/settings_notification_usecustomcolour_description"
      app:summaryOn="@string/settings_notification_usecustomcolour_description_on"
      app:summaryOff="@string/settings_notification_usecustomcolour_description_off"/>

  <xyzu.preference.ColorPickerPreference
      app:iconSpaceReserved="false"
      app:key="settings_notification_customcolour_styledcolorpreferencecompat_key" 
      app:title="@string/settings_notification_customcolour_title"
      app:summary="@string/settings_notification_customcolour_description"/>

  <xyzu.preference.ListPreference
      app:iconSpaceReserved="false"
      app:key="settings_notification_priority_listpreference_key"
      app:title="@string/settings_notification_priority_title"
      app:summary="@string/settings_notification_priority_description"
      app:dialogTitle="@string/settings_notification_priority_dialog_title"
      app:negativeButtonText="@string/settings_notification_priority_dialog_negativebutton"
      app:positiveButtonText="@string/settings_notification_priority_dialog_positivebutton"/>

  <xyzu.preference.ListPreference
      app:iconSpaceReserved="false"                           
      app:key="settings_notification_badgeicontype_listpreference_key"
      app:title="@string/settings_notification_badgeicontype_title"
      app:summary="@string/settings_notification_badgeicontype_description"
      app:dialogTitle="@string/settings_notification_badgeicontype_dialog_title"
      app:negativeButtonText="@string/settings_notification_badgeicontype_dialog_negativebutton"
      app:positiveButtonText="@string/settings_notification_badgeicontype_dialog_positivebutton"/>

  <xyzu.preference.NavigationBarInsetPreference />

</androidx.preference.PreferenceScreen>