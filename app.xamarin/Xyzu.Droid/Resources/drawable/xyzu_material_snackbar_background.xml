<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true">
    <ripple android:color="@color/ColorSurface">
      <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
          
          <corners
            android:topRightRadius="@dimen/dp16"
            android:topLeftRadius="@dimen/dp16"
            android:bottomRightRadius="@dimen/dp16"
            android:bottomLeftRadius="@dimen/dp16"/>
          
          <solid android:color="@color/ColorSurface" />
          
        </shape>
      </item>
    <item>
      <shape android:shape="rectangle">

        <corners
          android:topRightRadius="@dimen/dp16"
          android:topLeftRadius="@dimen/dp16"
          android:bottomRightRadius="@dimen/dp16"
          android:bottomLeftRadius="@dimen/dp16"/>
      
        <solid android:color="@color/ColorSurfaceTransparent" />

      </shape>
    </item>
    </ripple>
  </item>
  
  <item android:state_active="true">
    <shape android:shape="rectangle">

      <corners
        android:topRightRadius="@dimen/dp16"
        android:topLeftRadius="@dimen/dp16"
        android:bottomRightRadius="@dimen/dp16"
        android:bottomLeftRadius="@dimen/dp16"/>
          
      <solid android:color="@color/ColorSurface" />
          
    </shape>
  </item>

  <item>
    <shape android:shape="rectangle">

      <corners
        android:topRightRadius="@dimen/dp16"
        android:topLeftRadius="@dimen/dp16"
        android:bottomRightRadius="@dimen/dp16"
        android:bottomLeftRadius="@dimen/dp16"/>
      
      <solid android:color="@color/ColorSurfaceTransparent" />

    </shape>
  </item>

</selector>