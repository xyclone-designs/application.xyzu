<?xml version="1.0" encoding="utf-8"?>

<resources
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="Xyzu"></style>
  
  <style name="Xyzu.DatePicker" parent="Xyzu">
    <item name="android:textColor">@color/ColorOnSurface</item>
  </style>

  <!-- PopupMenu -->
  <style name="Xyzu.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
    <item name="android:clipToPadding">true</item>
    <item name="android:colorControlHighlight">@android:color/transparent</item>
    <item name="android:background">@null</item>
    <item name="android:backgroundTint">@color/ColorSurface</item>
    <item name="android:itemBackground">@drawable/xyzu_popupmenu_item_background</item>
    <item name="android:itemTextAppearance">@style/Xyzu.TextAppearance</item>
    <item name="android:popupBackground">@null</item>
    
    <item name="popupMenuBackground">@drawable/xyzu_popupmenu_background</item>
  </style>
  <!-- PopupMenu -->

  <style name="Xyzu.SearchView" parent="Xyzu">
    <item name="android:background">@color/ColorSurface</item>
    <item name="android:focusable">true</item>
    <item name="android:padding">@dimen/dp4</item>
    <item name="closeIcon">@drawable/icon_general_x</item>
    <item name="iconifiedByDefault">false</item>
    <item name="queryBackground">@android:color/transparent</item>
    <item name="submitBackground">@android:color/transparent</item>
    <item name="voiceIcon">@drawable/icon_general_microphone</item>
  </style>

  <style name="Xyzu.ShapeAppearanceOverlay.Cornered" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSizeTopRight">@dimen/dp16</item>
    <item name="cornerSizeTopLeft">@dimen/dp16</item>
    <item name="cornerSizeBottomRight">@dimen/dp16</item>
    <item name="cornerSizeBottomLeft">@dimen/dp16</item>
  </style>
  <style name="Xyzu.ShapeAppearanceOverlay.Cornered.Top" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSizeTopRight">@dimen/dp16</item>
    <item name="cornerSizeTopLeft">@dimen/dp16</item>
  </style>
  <style name="Xyzu.ShapeAppearanceOverlay.Cornered.Bottom" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSizeBottomRight">@dimen/dp16</item>
    <item name="cornerSizeBottomLeft">@dimen/dp16</item>
  </style>
  <style name="Xyzu.ShapeAppearanceOverlay.Cornered.Left" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSizeTopLeft">@dimen/dp16</item>
    <item name="cornerSizeBottomLeft">@dimen/dp16</item>
  </style>
  <style name="Xyzu.ShapeAppearanceOverlay.Cornered.Right" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSizeTopRight">@dimen/dp16</item>
    <item name="cornerSizeBottomRight">@dimen/dp16</item>
  </style>
  
  <style name="Xyzu.SlidingUpPanelLayout" parent="Xyzu">
    <item name="android:background">@android:color/transparent</item>
    <item name="android:gravity">bottom</item>
    <item name="android:orientation">vertical</item>

    <item name="app:umanoClipPanel">true</item>
    <item name="app:umanoFadeColor">@color/ColorSurface</item>
    <item name="app:umanoInitialState">collapsed</item>
    <item name="app:umanoOverlay">true</item>
    <item name="app:umanoShadowHeight">@dimen/dp0</item>
  </style>

  <style name="Xyzu.TextAppearance" parent="Xyzu">
