    <item name="android:textColor">@color/ColorOnSurface</item>
    <item name="android:textColorHighlight">@color/ColorOnSurfaceVarient</item>
    <item name="android:textColorHint">@color/ColorOnSurfaceVarient</item>
    <item name="android:textColorLink">@color/ColorOnSurfaceVarient</item>
    <item name="android:textFontWeight">300</item>
    <!-- <item name="android:textLocale"></item> -->
    <item name="android:textSize">@dimen/abc_text_size_small_material</item>
    <item name="android:textStyle">normal</item>
    <!-- <item name="android:typeface"></item> -->
    <item name="android:shadowColor">@android:color/transparent</item>
